{
	"//": "These are server dependencies. Client dependencies are in bower.json.",
	"//": "Dependencies after line break should be devDependencies, but then heroku won't install them.",
	"dependencies": {
		"express": "4.12.3",
		"socket.io": "1.3.5",

		"bower": "1.4.1",
		"gulp": "3.8.11",
		"gulp-babel": "5.1.0",
		"gulp-eslint": "0.9.0",
		"gulp-jade": "1.0.0",
		"gulp-plumber": "1.0.0",
		"gulp-sourcemaps": "1.5.2",
		"gulp-stylus": "2.0.1",
		"gulp-watch": "4.2.4",
		"source-map-support": "0.2.10"
	},
	"engines": {
		"node": "0.11.14"
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true
		},
		"ecmaFeatures": {
			"arrowFunctions": true,
			"blockBindings": true,
			"classes": true,
			"destructuring": true,
			"modules": true,
			"objectLiteralShortandMethods": true,
			"spread": true,
			"templateStrings": true
		},
		"rules": {
			"comma-style": [ 1, "last" ],
			"curly": [ 1, "multi" ],
			"default-case": 1,
			"generator-star-spacing": [ 1, "after" ],
			"indent": [ 1, "tab" ],
			"max-len": [ 1, 100, 4 ],
			"new-cap": 0,
			"no-alert": 0,
			"no-floating-decimal": 1,
			"no-inline-comments": 1,
			"no-multiple-empty-lines": [ 1, { "max": 2 } ],
			"no-plusplus": 1,
			"no-throw-literal": 1,
			"no-underscore-dangle": 0,
			"no-use-before-define": 0,
			"no-var": 1,
			"no-void": 1,
			"operator-assignment": [ 1, "never" ],
			"padded-blocks": [ 1, "never" ],
			"quote-props": [ 1, "as-needed" ],
			"quotes": [ 1, "single" ],
			"semi": 0,
			"space-after-keywords": [ 1, "always" ],
			"space-before-blocks": [ 1, "always" ],
			"space-before-function-parentheses": [ 1, "never" ],
			"spaced-line-comment": 1,
			"space-in-parens": [ 1, "never" ]
		}
	},
	"license": "WTFPL"
}
